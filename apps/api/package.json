{
  "name": "@template/api",
  "module": "./src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun ./src/server.ts",
    "dev": "bun --watch run ./src/server.ts",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build": "bun build ./src/server.ts --outdir ./dist --target bun",
    "lint": "bun run lint",
    "lint:fix": "bun run lint --fix"
  },
  "devDependencies": {
    "@template/typescript-config": "*",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "prettier": "^3.6.2",
    "prettier-plugin-sort-imports": "^1.8.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@template/backend-common": "*",
    "@template/common": "*",
    "@template/auth": "*",
    "@template/store": "*",
    "@template/trpc": "*",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
